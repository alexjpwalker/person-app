@{
    ViewBag.Title = "People";
}

<h1>Our people</h1>
<p>There are @Model.Count people. Let me introduce them to you.</p>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Group name</th>
            <th>Date added</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PersonApp.Models.Person person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@Html.ActionLink(person.FullName, $"Details/{person.Id}")</td>
                <td>@person.PersonGroup.Name</td>
                <td>@person.CreatedDate</td>
            </tr>
        }
    </tbody>
</table>
